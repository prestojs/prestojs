{
  "name": "prestojs",
  "version": "0.0.11",
  "main": "index.js",
  "author": "Dave Coates <david.coates@alliancesoftware.com.au>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "js-packages/@prestojs/*",
    "doc-site",
    "django-testbed"
  ],
  "scripts": {
    "lint": "eslint js-packages --ext .js,.ts",
    "check-types": "tsc -b tsconfig.lint.json",
    "clean": "rm -rf /tmp/tsc-output/@prestojs && wsrun -x doc-site -x django-testbed -m clean",
    "docs": "yarn workspace doc-site run develop",
    "extract-docs": "yarn node doc-site/extract-docs",
    "prebuild": "wsrun -m -x doc-site clean",
    "test": "# Always runInBand so performance tests are more consistent\njest --runInBand",
    "dev": "wsrun dev",
    "build": "wsrun -t -x doc-site -x django-testbed build",
    "build:docs": "yarn workspace doc-site run build",
    "build:watch": "wsrun --exclude django-testbed 'build:watch'",
    "build:declarations": "yarn workspace @prestojs/routing run build:declaration && yarn workspace @prestojs/viewmodel run build:declaration && yarn workspace @prestojs/ui run build:declaration && yarn workspace @prestojs/rest run build:declaration && yarn workspace @prestojs/final-form run build:declaration && yarn workspace @prestojs/ui-antd run build:declaration",
    "release": "yarn build && read -p 'Enter OTP: ' OTP && yarn wsrun -x doc-site -x django-testbed publish --otp $OTP",
    "postversion": "node ./bin/sync-workspace-versions.js"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-react": "^7.8.3",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.2.1",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.18",
    "babel-jest": "^25.1.0",
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-diff": "^25.1.0",
    "jest-fetch-mock": "^3.0.1",
    "lint-staged": "^9.5.0",
    "pnp-webpack-plugin": "^1.6.0",
    "prettier": "2.0.5",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.15.2",
    "typedoc-neo-theme": "^1.0.4",
    "typescript": "^3.9.2",
    "yargs": "^15.1.0"
  },
  "peerDependencies": {
    "lerna": "*",
    "semantic-release": "*"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "wsrun": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && lint-staged",
      "pre-push": "LINT_PUSH=1 ./bin/lint/lint-general.py",
      "commit-msg": "./bin/git-hooks/commit-msg $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./bin/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
